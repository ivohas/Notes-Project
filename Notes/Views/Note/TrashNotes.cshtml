@model IEnumerable<NoteViewModel>

<h2>Trash Notes</h2>

@if (Model.Any())
{
    <div class="row">
        @foreach (var note in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@note.Title</h5>
                        <p class="card-text">@note.Content</p>
                        <div class="d-flex justify-content-between">
                            <form method="post" asp-action="MoveToTrash" asp-controller="Note" asp-route-id="@note.Id.ToString()">
                                <button type="submit" class="btn btn-success">Restore</button>
                            </form>
                            <form method="post" asp-action="Delete" asp-controller="Note" asp-route-id="@note.Id.ToString()">
                                <button type="submit" class="btn btn-warning" onclick="return confirm('Are you sure you want to delete this note?')">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

}
else
{
    <p>No notes found in the trash.</p>
}
